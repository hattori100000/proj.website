<%= layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">
    <h3>Create a new listing</h3>
    <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
   
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="Enter title" type="text" class="form-control" required />
        <div class="invalid-feedback">
          Please select a valid state.
      </div>
    
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" placeholder="Enter description" type="text" class="form-control" required></textarea>
        <div class="valid-feedback">discription should be  valid </div>
      </div>

 

      <div class="mb-3">
        <label for="image" class="form-label">Upload image</label>
        <input name="listing[image]"  type="file" class="form-control"  required />
      </div>


      <div class="row">
        <div class="mb-3 col-4">
          <label for="price" class="form-label">Price</label>
          <input name="listing[price]" placeholder="Enter price" class="form-control" required />
          <div class="valid-feedback">price should be  valid price</div>
        </div>

        <div class="mb-3 col-8">
          <label for="country" class="form-label">Country</label>
          <input name="listing[country]" placeholder="Enter country" type="text" class="form-control" />
        </div>
      </div>
 
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input name="listing[location]" placeholder="Enter location" type="text" class="form-control" required />
      </div>
    
      <button class="btn btn-dark add-btn">ADD</button>
    </form>
  </div>
</div>
